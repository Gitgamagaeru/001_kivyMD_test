<HomeScreen>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

        BoxLayout:
            id: container
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "10dp"

            MDTopAppBar:
                title: "Home Screen"
                elevation: 0
                left_action_items: [["menu", lambda x: app.nav_drawer.set_state('open')]]

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"
                padding: "20dp"

                # 左の縦並び
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "5dp"

                    MDLabel:
                        text: "開始日"
                        halign: "left"
                    MDTextField:
                        id: start_date
                        hint_text: "YYYYMMdd"
                        helper_text: "必須項目です"
                        helper_text_mode: "on_error"
                        error: False

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"
                padding: "20dp"

                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "5dp"

                    MDLabel:
                        text: "開始日2"
                        halign: "left"
                    MDTextField:
                        id: start_date2
                        hint_text: "YYYYMMdd"
                        helper_text: "必須項目です"
                        helper_text_mode: "on_error"
                        error: False

                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "5dp"

                    MDLabel:
                        text: "終了日2"
                        halign: "left"
                    MDTextField:
                        id: end_date2
                        hint_text: "YYYYMMdd"
                        helper_text: "必須項目です"
                        helper_text_mode: "on_error"


    
